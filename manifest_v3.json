{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 3,
  "name": "Easy Quiz Poly",
  "description": "Tiện ích hỗ trợ sinh viên làm bài Quiz trường Cao đẳng FPT Polytechnic",
  "background" : {
    "service_worker" : "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.poly.edu.vn/*&sequence=*"],
      "exclude_matches": ["*://*.poly.edu.vn/*cmd=outQuestionSummary*", "*://*.poly.edu.vn/*cmd=showPasswordForm*"],
      "run_at": "document_end",
      "js": ["lms_script.js"]
    },
    {
      "matches": ["*://*.poly.edu.vn/*target=tst_*", "*://*.poly.edu.vn/*cmdClass=ilobjtestgui*", "*://*.poly.edu.vn/*cmd=infoScreen*"],
      "run_at": "document_end",
      "js": ["lms_start.js"]
    },
    {
      "matches": ["*://*.poly.edu.vn/*ilexsubmissionfilegui*"],
      "js": ["unlimitUploadFshare.js"]
    }
  ],
  "version": "1.7.9",
  "author": "fb.com/hi.trfi",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html",
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "Easy Quiz Poly"
  },
  "host_permissions": [
    "*://*.poly.edu.vn/*",
    "https://*.facebook.com/*"
  ],
  "permissions": [
    "declarativeNetRequest",
    "cookies",
    "declarativeContent",
    "contextMenus",
    "storage"
  ]
}